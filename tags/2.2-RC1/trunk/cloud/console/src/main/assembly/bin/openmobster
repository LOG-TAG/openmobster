DIRNAME=`dirname "$0"`

# OS specific support (must be 'true' or 'false').
cygwin=false;
case "`uname`" in
    CYGWIN*)
        cygwin=true
        ;;
esac

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
    [ -n "$GSHELL_HOME" ] && GSHELL_HOME=`cygpath --unix "$GSHELL_HOME"`
    [ -n "$JAVACMD" ] && JAVACMD=`cygpath --unix "$JAVACMD"`
    [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

# Locate GSHELL_HOME if not it is not set
if [ "x$GSHELL_HOME" = "x" ]; then
    GSHELL_HOME=`cd "$DIRNAME/.."; pwd`
fi

# Determine the Java command to use to start the JVM
if [ -z "$JAVACMD" ]; then
    if [ -n "$JAVA_HOME" ]; then
        JAVACMD="$JAVA_HOME/bin/java"
    else
        JAVACMD="java"
    fi
fi

BOOTJAR="$GSHELL_HOME/lib/boot/gshell-bootstrap.jar"
if $cygwin ; then
    BOOTJAR=`cygpath --windows "$BOOTJAR"`
fi

# Start the JVM
#exec "$JAVACMD" $JAVA_OPTS -Xrunjdwp:transport=dt_socket,address=5005,server=y,suspend=y -jar "$BOOTJAR" "$@"
exec "$JAVACMD" $JAVA_OPTS -jar "$BOOTJAR" "$@"

