<project>
	<parent>
		<groupId>org.openmobster.core</groupId>
		<artifactId>offline-app</artifactId>
		<version>2.0-snapshot</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>	
	<name>offline-app-cloud</name>	
	<artifactId>offline-app-cloud</artifactId>	
	<packaging>jar</packaging>
	
	<dependencies>
		<dependency>
			<groupId>org.openmobster.core</groupId>
			<artifactId>cloud-sdk</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.openmobster.core</groupId>
			<artifactId>agent-provisioning</artifactId>
			<scope>test</scope>									
		</dependency>
		<dependency>
			<groupId>org.openmobster.core</groupId>
			<artifactId>device-agent-simulator</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>test</scope>
		</dependency>				
	    <dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-jdk14</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<profiles>
	 	<profile>
	 		<id>run-server</id>
	 		<build>		
				<plugins>			     				     		  
		     		<plugin>
			          <groupId>org.apache.maven.plugins</groupId>
			          <artifactId>maven-surefire-plugin</artifactId>
			          <configuration>              			          		 		          					          					          						            	            				                                                    	 	                       		            	            	            	                     	            	            	               
			            	<includes>		                         	              
			              		<include>**/RunCloudServer.java</include>
			            	</includes>
			            	
			            	<!-- toggle to activate debugger -->			            			            	            	              
			            	<forkMode>none</forkMode>			            	
			            	<!--			            				            	    			            				            								   	
			          		<debugForkedProcess>true</debugForkedProcess>
			          		-->			          		          		          		            	            	          	    	          			          		          				          		
			          </configuration>
			        </plugin> 			         				   			    								   			    					        			
				</plugins>					
			 </build>
	 	</profile>	 		 	
	 </profiles>
</project>
